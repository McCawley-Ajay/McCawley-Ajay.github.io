@page "/counter"
@rendermode InteractiveServer



<h1>Counter</h1>

<p role="status"> @currentCount1</p>

<button class="btn btn-primary" @onclick="IncrementCount1">Add 2</button>

<p role="status"> @currentCount</p>
<button class="btn btn-primary" @onclick="IncrementCount">Add 1</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        if(currentCount > 10){
            currentCount = 0;
        }
    }

    private int currentCount1 = 0;

    private void IncrementCount1()
    {
        currentCount1 = currentCount1 + 2;
        if(currentCount1 > 10){
            currentCount1 = 0;
        }
    }
 
}
