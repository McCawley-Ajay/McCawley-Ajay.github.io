@page "/Calculator"
@rendermode InteractiveServer

<h3>Simple Calculator</h3>

<div>
    <input @bind="firstNumber" type="number" placeholder="Enter the first number" />
</div>
<div>
    <select @bind="selectedOperator">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
</div>
<div>
    <input @bind="secondNumber" type="number" placeholder="Enter the second number" />
</div>
<div>
    <button @onclick="Calculate">Calculate</button>
</div>
<div>
    <h4>Result: @result</h4>
</div>

@code {
    private double firstNumber;
    private double secondNumber;
    private string selectedOperator = "+";
    private double result;

    private void Calculate()
    {
        switch (selectedOperator)
        {
            case "+":
                result = firstNumber + secondNumber;
                break;
            case "-":
                result = firstNumber - secondNumber;
                break;
            case "*":
                result = firstNumber * secondNumber;
                break;
            case "/":
                if (secondNumber != 0)
                {
                    result = firstNumber / secondNumber;
                }
                else
                {
                    result = double.NaN; // Handle division by zero
                }
                break;
        }
    }
}
    
